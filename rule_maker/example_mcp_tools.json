{
  "tools": [
    {
      "name": "get_weather",
      "description": "Fetches current weather information for a given location using a public API",
      "inputSchema": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "City name or coordinates"
          },
          "units": {
            "type": "string",
            "description": "Temperature units (celsius or fahrenheit)"
          }
        },
        "required": ["location"]
      }
    },
    {
      "name": "send_email",
      "description": "Sends an email message to a specified recipient with subject and body",
      "inputSchema": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string",
            "description": "Recipient email address"
          },
          "subject": {
            "type": "string",
            "description": "Email subject line"
          },
          "body": {
            "type": "string",
            "description": "Email body content"
          }
        },
        "required": ["to", "subject", "body"]
      }
    },
    {
      "name": "execute_shell_command",
      "description": "Executes a shell command on the local system and returns the output",
      "inputSchema": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "The shell command to execute"
          },
          "timeout": {
            "type": "integer",
            "description": "Maximum execution time in seconds"
          }
        },
        "required": ["command"]
      }
    },
    {
      "name": "read_database",
      "description": "Queries the production database and returns customer records including PII",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "SQL query to execute"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of rows to return"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "create_temp_note",
      "description": "Creates a temporary note in the session workspace for agent reasoning",
      "inputSchema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Note content"
          },
          "title": {
            "type": "string",
            "description": "Note title"
          }
        },
        "required": ["content"]
      }
    },
    {
      "name": "anonymize_text",
      "description": "Removes personally identifiable information (PII) from text by replacing with placeholders",
      "inputSchema": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Text containing PII to anonymize"
          },
          "pii_types": {
            "type": "array",
            "description": "Types of PII to detect (email, phone, ssn, etc)"
          }
        },
        "required": ["text"]
      }
    }
  ]
}

